    <link rel="icon" href={logoSvg.src ?? logoSvg} />
    <meta property="og:image" content={heroImg.src ?? heroImg} />
    <slot name="head" />
  </head>
  <body class="min-h-screen antialiased bg-white text-zinc-900">
    <slot />
