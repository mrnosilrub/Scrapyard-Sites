---
import FAQ from "../components/FAQ.astro"
import Hero from "../components/Hero.astro"
import PricingTable from "../components/PricingTable.astro"
import { DEFAULT_FAQ } from "../data/faq"
import Base from "../layouts/Base.astro"
import { withBase } from "../lib/paths"
---
<Base title="Pricing — Scrapyard Sites" description="Launch a scrapyard website in 7–10 days. Materials pages, tap-to-call, quote forms, and a 90-day warm-lead guarantee.">
  <Hero
    title="Invest in Your Reputation"
    body="Choose from two flat packages and a simple care plan—no hidden fees, no surprises. Each plan builds credibility, attracts qualified sellers and keeps you visible in local search."
    primaryHref="#packages"
    primaryLabel="Explore Packages"
  />

  <section class="band bg-brand-orange/5" id="packages">
    <div class="section pt-0 pb-0">
      <div class="reveal-immediate">
        <PricingTable heading="Service Pricing" showDepositCta={true} depositGoal="CTA: Pay Deposit (Pricing)" />
      </div>
    </div>
  </section>

  <section class="band">
    <div class="section">
    <div class="reveal">
      <div class="eyebrow">Details</div>
    <h2 class="mt-1 text-2xl font-bold tracking-tight">How It Works & Extras</h2>
    <div class="mt-4 grid gap-6 lg:grid-cols-2">
      <div>
        <h3 class="font-semibold">How It Works</h3>
        <ul class="mt-2 list-disc pl-5 text-sm text-zinc-700">
          <li>Book build week (50% deposit)</li>
          <li>Launch (balance due)</li>
          <li>Payment methods</li>
          <li>90‑day warm lead guarantee</li>
        </ul>
      </div>
      <div>
        <h3 class="font-semibold">Extras</h3>
        <ul class="mt-2 list-disc pl-5 text-sm text-zinc-700">
          <li>Extra pages – $350 each</li>
          <li>On‑site photo/video (Lower 48) – from $750</li>
          <li>Hand‑off to your server – $199</li>
         <li><a href={withBase('/contact/')} class="link">Contact us</a></li>
        </ul>
      </div>
    </div>
    </div>
    </div>
  </section>

  <section class="band bg-brand-orange/5">
    <div class="reveal">
      <FAQ items={DEFAULT_FAQ} />
    </div>
  </section>
</Base>

