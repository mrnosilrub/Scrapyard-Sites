---
import Base from "../layouts/Base.astro";
const base = import.meta.env.BASE_URL;
const withBase = (p: string) => (p.startsWith('http') || p.startsWith('#') ? p : base + p.replace(/^\//, ''));
---
<Base title="Terms of Service — Scrapyard Sites">
  <section class="mx-auto max-w-3xl px-4 py-16">
    <h1 class="text-3xl font-bold tracking-tight">Terms of Service</h1>
    <p class="mt-4">The terms of service will be posted here soon.</p>
    <div class="mt-8 rounded-lg bg-brand-orange p-6 text-white">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <div class="font-semibold">Save 10% on your build — pay your deposit by Aug 30</div>
          <div class="text-white/90">Secure your build—own page-one Google space before competitors wake up.</div>
        </div>
        <a href={withBase('/pricing/#deposit')} class="inline-flex items-center justify-center rounded-md bg-white px-5 py-3 font-medium text-brand-orange">Pay Deposit →</a>
      </div>
    </div>
  </section>
</Base>

