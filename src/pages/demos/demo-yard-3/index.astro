---
import hero from "../../../assets/hero.jpg?url"
import logo from "../../../assets/logo.svg?url"
import Demo from "../../../layouts/Demo.astro"
import DemoHeader from "../../../components/demo/DemoHeader.astro"
import DemoFooter from "../../../components/demo/DemoFooter.astro"
const base = import.meta.env.BASE_URL
const withBase = (p: string) =>
	p.startsWith("http") || p.startsWith("#") ? p : base + p.replace(/^\//, "")
---
<Demo>
  <style>
    :root { --brand-orange: #4169e1; --brand-steel: #5E6367; --brand-charcoal: #2B2B2B; }
  </style>
  <link rel="icon" href={logo} />
  <meta property="og:image" content={hero} />
  <script type="application/ld+json">{JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    name: "Demo Yard",
    description: "Scrap metal recycling services in the Metropolis area.",
    url: "https://www.demoyard.com",
    telephone: "+1-555-0100",
    address: {
      "@type": "PostalAddress",
      streetAddress: "1234 Industrial Dr.",
      addressLocality: "Metropolis",
      addressRegion: "TX",
      postalCode: "77000",
      addressCountry: "US"
    }
  })}</script>

  <div id="demo-top-banner" class="w-full bg-[var(--brand-orange)] text-white text-sm">
    <div class="mx-auto max-w-7xl px-6 md:px-8 py-2 text-center">
      <a href={withBase('/')} class="underline underline-offset-4">Return to ScrapyardSites.com</a>
    </div>
  </div>

  <DemoHeader title="Premium Demo" basePath="/demos/demo-yard-3" />

  <section id="top" class="relative isolate">
    <div class="relative h-[60vh] min-h-[420px] w-full bg-cover bg-center" style={`background-image: url(${hero});`} aria-hidden="true">
      <div class="absolute inset-0 bg-black/50"></div>
      <div class="relative z-10 mx-auto max-w-5xl px-6 md:px-8 py-24 flex h-full items-center">
        <div class="text-white">
          <h1 class="text-5xl font-bold tracking-tight leading-tight">
            <span class="block">Top Dollar for</span>
            <span class="block">Scrap Metal</span>
            <span class="block">Fast, Fair, & Reliable</span>
          </h1>
          <p class="mt-4 max-w-3xl text-lg text-zinc-100">Serving the metro area with 24‑hour turnarounds and honest weights.</p>
          <div class="mt-8 flex flex-col sm:flex-row gap-3">
            <a href="#services" class="inline-flex items-center justify-center rounded-md bg-white/10 px-5 py-3 font-medium text-white ring-1 ring-inset ring-white/40 hover:bg-white/20">Our Services ↓</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="services" class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <h2 class="text-2xl font-bold tracking-tight">Our Core Services</h2>
    <p class="mt-2 text-zinc-700">Comprehensive scrap buying, container rental, and on-site demolition.</p>
    <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <a href={withBase('/demos/demo-yard-3/services/#buying')} class="rounded-lg border border-zinc-200 p-5"><h3 class="font-semibold">Ferrous & Non‑Ferrous Buying</h3><p class="mt-1 text-sm text-zinc-600">Competitive pricing on steel, aluminum, copper, brass, and more.</p></a>
      <a href={withBase('/demos/demo-yard-3/services/#containers')} class="rounded-lg border border-zinc-200 p-5"><h3 class="font-semibold">Industrial Container Service</h3><p class="mt-1 text-sm text-zinc-600">Scheduled roll‑off swaps to keep your operation moving.</p></a>
      <a href={withBase('/demos/demo-yard-3/services/#demo')} class="rounded-lg border border-zinc-200 p-5"><h3 class="font-semibold">Demolition & Clean‑Up</h3><p class="mt-1 text-sm text-zinc-600">Safe, insured crews for on‑site dismantling and hauling.</p></a>
    </div>
    <div class="mt-6"><a href={withBase('/demos/demo-yard-3/services/')} class="text-[var(--brand-orange)] font-medium">View All</a></div>
  </section>

  <section id="client-band" class="mx-auto max-w-7xl px-6 md:px-8 py-12">
    <div class="rounded-lg bg-zinc-50 ring-1 ring-zinc-200 p-6 text-center">
      <div>★★★★★ 4.8 Google rating</div>
      <div class="mt-1 text-sm text-zinc-600">City of Houston · XYZ Construction · Acme Manufacturing · MegaCorp</div>
      <div class="mt-1 text-sm text-zinc-600">As seen in Recycling Today</div>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 md:px-8 py-12">
    <div class="grid gap-4 sm:grid-cols-3">
      <div class="rounded-lg bg-gradient-to-br from-[var(--brand-orange)] to-blue-400 p-6 text-white"><div class="text-xl font-bold stat-number" data-target="50">0+</div><div class="text-sm">Years Combined Experience</div></div>
      <div class="rounded-lg bg-gradient-to-br from-[var(--brand-orange)] to-blue-400 p-6 text-white"><div class="text-xl font-bold stat-number" data-target="24">0h</div><div class="text-sm">Average Turnaround</div></div>
      <div class="rounded-lg bg-gradient-to-br from-[var(--brand-orange)] to-blue-400 p-6 text-white"><div class="text-xl font-bold stat-number" data-target="100">0%</div><div class="text-sm">Satisfaction Guarantee</div></div>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <div class="max-w-3xl">
      <h2 class="text-2xl font-bold tracking-tight">Sell Your Scrap in 3 Easy Steps</h2>
      <p class="mt-1 text-zinc-700">(Total yard time: ~10 minutes—no appointment, no hassle.)</p>
    </div>
    <div class="mt-6 grid gap-6 sm:grid-cols-3">
      <div class="rounded-lg border border-zinc-200 p-5">
        <h3 class="font-semibold">1 — Check Your Material</h3>
        <p class="mt-1 text-sm text-zinc-600">We accept Copper, Brass, Aluminum (sheet, cast & cans), Steel, Iron, Stainless Steel & High Temp, Catalytic Converters, Switch Gear, E-Scrap, Batteries, & more!</p>
        <a href={withBase('/demos/demo-yard-3/accepted-materials/#materials')} class="mt-2 inline-block text-[var(--brand-orange)]">Accepted Materials ↓</a>
      </div>
      <div class="rounded-lg border border-zinc-200 p-5">
        <h3 class="font-semibold">2 — Drive On & Unload</h3>
        <p class="mt-1 text-sm text-zinc-600">Roll onto our calibrated truck scale, grab a yard pass, and follow the clearly-marked lanes. Our crew will grade, sort, and unload for you—so you’re back on the road fast.</p>
      </div>
      <div class="rounded-lg border border-zinc-200 p-5">
        <h3 class="font-semibold">3 — Get Paid—Instantly</h3>
        <p class="mt-1 text-sm text-zinc-600">Watch your weight ticket print, then choose Cash, ACH, or Check on the spot. A live price ticker shows today’s top three metals while you wait.</p>
      </div>
    </div>
    <div class="mt-6">      <a href={withBase('/demos/demo-yard-3/contact/')} class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">Request a Quote</a></div>
  </section>

  <section id="containers" class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
      <div>
        <h2 class="text-2xl font-bold tracking-tight">Need a Roll-Off Tomorrow?</h2>
        <p class="mt-2 text-zinc-700">Same-day drops, 20-60 yd³ bins, and GPS-tracked drivers who swap your box before your scrap bay backs up.</p>
        <ul class="mt-3 list-disc pl-5 text-zinc-700 space-y-1">
          <li>4-hour average response inside 50 mi radius</li>
          <li>No rental fees; freight only—metal value offsets the rest</li>
          <li>E-mailed tonnage report before the truck leaves your dock</li>
        </ul>
        <div class="mt-4 flex gap-3">
          <a href="#quote" class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">Book a Container</a>
          <a href="tel:555123SCRAP" class="inline-flex items-center rounded-md bg-zinc-900 px-5 py-3 font-medium text-white">Call Dispatch</a>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <img src={hero} alt="Roll-off" class="h-36 w-full rounded-lg object-cover" loading="lazy" />
        <img src={hero} alt="20yd bin" class="h-36 w-full rounded-lg object-cover" loading="lazy" />
        <img src={hero} alt="30yd bin" class="h-36 w-full rounded-lg object-cover" loading="lazy" />
        <img src={hero} alt="60yd bin" class="h-36 w-full rounded-lg object-cover" loading="lazy" />
      </div>
    </div>
  </section>

  <section id="materials" class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <h2 class="text-2xl font-bold tracking-tight">Accepted Materials</h2>
    <p class="mt-1 text-zinc-700">These common items bring the best rates.</p>
    <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {[
        { t: 'Copper & Brass', s: 'Highest copper prices in county', img: 'copper.jpg', id: 'copper' },
        { t: 'Aluminum', s: 'Clean extrusion & sheet', img: 'aluminum.jpg', id: 'aluminum' },
        { t: 'Steel & Iron', s: 'HMS, prepared plate & tin', img: 'steel.jpg', id: 'steel' },
        { t: 'Stainless Steel & High Temp', s: '304/316 solids', img: 'stainless.jpg', id: 'stainless' },
        { t: 'Catalytic Converters', s: 'OEM units', img: 'catalytic.jpg', id: 'cats' },
        { t: 'Switch Gear', s: 'Industrial electrical panels', img: 'rolloff.jpg', id: 'switchgear' },
        { t: 'E‑Scrap & Batteries', s: 'Boards and lead‑acid', img: 'batteries.jpg', id: 'escrap' }
      ].map((c) => (
                 <a href={withBase(`/demos/demo-yard-3/accepted-materials/#${c.id}`)} class="group overflow-hidden rounded-lg border border-zinc-200" data-aos>
                     <img src={hero} alt={c.t} class="h-40 w-full object-cover" loading="lazy" />
          <div class="p-4">
            <h3 class="font-semibold group-hover:text-[var(--brand-orange)]">{c.t}</h3>
            <p class="mt-1 text-sm text-zinc-600">{c.s}</p>
          </div>
        </a>
      ))}
    </div>
    <div class="mt-6"><a href={withBase('/demos/demo-yard-3/accepted-materials/')} class="text-[var(--brand-orange)] font-medium">View All</a></div>
  </section>

  <section id="cta-final" class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
      <div>
        <h2 class="text-2xl font-bold tracking-tight">Ready to turn scrap into cash?</h2>
        <p class="mt-1 text-zinc-700">Pull in today—or lock a roll-off for tomorrow—and leave with money in your pocket in minutes.</p>
        <p class="mt-1 text-sm text-zinc-600">Phones answered 7 a – 6 p · Monday – Saturday</p>
        <div class="mt-4 flex gap-3">
          <a href="#quote" class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">Request a Quote</a>
          <a href="tel:555123SCRAP" class="inline-flex items-center rounded-md bg-zinc-900 px-5 py-3 font-medium text-white">Call (555) 123-SCRAP</a>
        </div>
      </div>
      <img src={withBase('/assets/hero.jpg')} alt="Demo" class="h-56 w-full rounded-lg object-cover" />
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <div class="rounded-lg bg-zinc-50 p-6 ring-1 ring-zinc-200">
      <iframe class="h-64 w-full rounded" src="https://maps.google.com/maps?q=Houston&t=&z=12&ie=UTF8&iwloc=&output=embed"></iframe>
      <dl class="mt-4 grid gap-2 text-sm text-zinc-700 sm:grid-cols-2">
        <div><dt class="font-semibold">Hours</dt><dd>Mon–Fri 8am–5pm</dd></div>
        <div><dt class="font-semibold">Address</dt><dd>123 Demo Road, Demo City, NY 12345</dd></div>
        <div><dt class="font-semibold">Phone</dt><dd><a class="text-[var(--brand-orange)]" href="tel:5551234567">555-123-4567</a></dd></div>
        <div><dt class="font-semibold">Email</dt><dd><a class="text-[var(--brand-orange)]" href="mailto:info@demoyard.com">info@demoyard.com</a></dd></div>
      </dl>
    </div>
  </section>

  <DemoFooter />

  <script is:inline>
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (!prefersReduced) {
      const io = new IntersectionObserver(entries => {
        entries.forEach(e => {
          if (e.isIntersecting) {
            const el = /** @type {HTMLElement} */ (e.target);
            const target = Number.parseInt(el.dataset.target || '0', 10);
            let n = 0; const step = Math.max(1, Math.floor(target/50));
            const id = setInterval(() => { n += step; if (n >= target) { n = target; clearInterval(id); } el.textContent = (el.textContent?.includes('%')? n+'%': el.textContent?.includes('h')? n+'h': n + (el.textContent?.includes('+')?'+':'')); }, 30);
            io.unobserve(el);
          }
        });
      }, { threshold: 0.3 });
      document.querySelectorAll('.stat-number').forEach(el => io.observe(el));
    }
  </script>
</Demo>

