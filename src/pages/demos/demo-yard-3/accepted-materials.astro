---
import Demo from "../../../layouts/Demo.astro";
const base = import.meta.env.BASE_URL;
const withBase = (p: string) => (p.startsWith('http') || p.startsWith('#') ? p : base + p.replace(/^\//, ''));
---
<Demo>
  <Fragment slot="head">
    <meta name="description" content="See what scrap metals Demo Yard accepts for recycling." />
    <meta property="og:title" content="Accepted Materials | Demo Yard" />
  </Fragment>
  <div id="demo-top-banner" class="w-full bg-[var(--brand-orange)] text-white text-sm">
    <div class="mx-auto max-w-7xl px-6 md:px-8 py-2 text-center">
      <a href={withBase('/')} class="underline underline-offset-4">Return to ScrapyardSites.com</a>
    </div>
  </div>
  <header class="sticky top-0 z-40 bg-white shadow-header">
    <input id="demo-nav-toggle" type="checkbox" class="peer sr-only" />
    <div class="mx-auto max-w-7xl px-6 md:px-8">
      <div class="flex h-16 items-center justify-between">
        <a href={withBase('/demos/demo-yard-3/')} class="text-lg font-semibold">Premium Demo</a>
        <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
          <a href={withBase('/demos/demo-yard-3/services/')} class="hover:text-[var(--brand-orange)]">Services</a>
          <a href={withBase('/demos/demo-yard-3/process/')} class="hover:text-[var(--brand-orange)]">Process</a>
          <a href={withBase('/demos/demo-yard-3/accepted-materials/')} class="hover:text-[var(--brand-orange)]">Materials</a>
          <a href={withBase('/demos/demo-yard-3/about/')} class="hover:text-[var(--brand-orange)]">About Us</a>
          <a href={withBase('/demos/demo-yard-3/our-team/')} class="hover:text-[var(--brand-orange)]">Our Team</a>
          <a href={withBase('/demos/demo-yard-3/contact/')} class="hover:text-[var(--brand-orange)]">Contact</a>
          <a href={withBase('/demos/demo-yard-3/faq/')} class="hover:text-[var(--brand-orange)]">FAQ</a>
        </nav>
        <div class="hidden md:flex">
          <a href={withBase('/demos/demo-yard-3/contact/')} class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-4 py-2 text-white shadow hover:opacity-95">Request a Quote</a>
        </div>
      </div>
    </div>
  </header>
  <main>
    <section id="top" class="mx-auto max-w-7xl px-6 md:px-8 py-16">
      <h1 class="text-3xl font-bold tracking-tight">Accepted Materials</h1>
      <p class="mt-2 text-zinc-700">Top prices for copper, aluminum, steel and more—zero hidden fees.</p>
      <div class="mt-4 flex gap-3">
        <a href={withBase('/demos/demo-yard-3/contact/')} class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">Request a Quote</a>
        <a href="#details" class="inline-flex items-center rounded-md bg-zinc-900 px-5 py-3 font-medium text-white">View Details</a>
      </div>
    </section>
    <section id="materials" class="mx-auto max-w-7xl px-6 md:px-8 py-12">
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {[ 'Copper & Brass', 'Aluminum', 'Steel & Iron', 'Stainless Steel & High Temp', 'Catalytic Converters', 'Switch Gear', 'E‑Scrap & Batteries' ].map((t) => (
          <a href={`#${t.toLowerCase().split(' ')[0].replace(/[^a-z]/g,'')}`} class="rounded-lg border border-zinc-200 p-5"><h3 class="font-semibold">{t}</h3></a>
        ))}
      </div>
    </section>
    <section id="details" class="mx-auto max-w-7xl px-6 md:px-8 py-12">
      <div class="space-y-4">
        <details id="copper" class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-semibold">Copper & Brass</summary><div class="mt-2 text-sm text-zinc-700">We pay top dollar for: #1 Bright & Shiny wire; Insulated copper cable; Yellow brass solids; Range brass. We can’t accept: Air-conditioning coils with freon.</div></details>
        <details id="aluminum" class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-semibold">Aluminum</summary><div class="mt-2 text-sm text-zinc-700">We pay top dollar for: Extrusion and sheet; Cast wheels and blocks. We can’t accept: Foil pans.</div></details>
        <details id="steel" class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-semibold">Steel & Iron</summary><div class="mt-2 text-sm text-zinc-700">We pay top dollar for: HMS and prepared plate; Cast iron machinery; Lathes; Tin. We can’t accept: Pressurized tanks; Paint cans.</div></details>
        <details id="stainless" class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-semibold">Stainless Steel & High Temp</summary><div class="mt-2 text-sm text-zinc-700">We pay top dollar for: 304/316 solids; Food-grade tanks.</div></details>
        <details id="cats" class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-semibold">Catalytic Converters</summary><div class="mt-2 text-sm text-zinc-700">We pay top dollar for: OEM units. We can’t accept: Empty or punched shells.</div></details>
        <details id="switchgear" class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-semibold">Switch Gear</summary><div class="mt-2 text-sm text-zinc-700">We pay top dollar for: Industrial switchgear.</div></details>
        <details id="escrap" class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-semibold">E‑Scrap & Batteries</summary><div class="mt-2 text-sm text-zinc-700">We pay top dollar for: Server boards; Lead-acid & Li‑ion packs. We can’t accept: CRT monitors; Alkaline batteries.</div></details>
      </div>
      <div class="mt-6 rounded-md bg-zinc-50 p-4 text-sm text-zinc-700 ring-1 ring-zinc-200">State law reminder: A valid photo ID is required for non‑ferrous sales. No fuel, oil, or refrigerants may remain in scrap items.</div>
    </section>
  </main>
  <footer class="mt-24 border-t border-zinc-200 bg-white">
    <div class="mx-auto max-w-7xl px-6 md:px-8 py-12">
      <p class="text-sm text-zinc-600">© {new Date().getFullYear()} Scrapyard Sites — All rights reserved.</p>
    </div>
  </footer>
</Demo>

