---
import DemoFooter from "../../../components/demo/DemoFooter.astro"
import DemoHeader from "../../../components/demo/DemoHeader.astro"
import Demo from "../../../layouts/Demo.astro"
const base = import.meta.env.BASE_URL
const withBase = (p: string) =>
	p.startsWith("http") || p.startsWith("#") ? p : base + p.replace(/^\//, "")
---
<Demo>
  <Fragment slot="head">
    <meta name="description" content="Understand Demo Yard's scrap metal recycling process from drop-off to payment." />
    <meta property="og:title" content="Process | Demo Yard" />
  </Fragment>
  <DemoHeader title="Premium Demo" basePath="/demos/demo-yard-3" />
  <main>
    <section class="mx-auto max-w-7xl px-6 md:px-8 py-16" id="top">
      <h1 class="text-3xl font-bold tracking-tight">From Pull-Up to Payout in 3 Easy Steps</h1>
      <p class="mt-2 text-zinc-700">Average yard time: 10 minutes — no appointment needed.</p>
      <a href={withBase('/demos/demo-yard-3/contact/')} class="mt-4 inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">Request a Quote</a>
    </section>
    <section class="mx-auto max-w-7xl px-6 md:px-8 py-12">
      <div class="grid gap-6 sm:grid-cols-3">
        <div class="rounded-lg border border-zinc-200 p-5 text-center">10 min – Avg. yard time</div>
        <div class="rounded-lg border border-zinc-200 p-5 text-center">5 min – Clean profits</div>
        <div class="rounded-lg border border-zinc-200 p-5 text-center">0 – Appointments needed</div>
      </div>
    </section>
    <section class="mx-auto max-w-7xl px-6 md:px-8 py-12">
      <div class="grid gap-6 sm:grid-cols-3">
        <div class="rounded-lg border border-zinc-200 p-5">
          <h3 class="font-semibold">Check Your Material</h3>
          <p class="mt-1 text-sm text-zinc-700">Browse Accepted Materials or text us a photo.</p>
          <p class="mt-1 text-xs text-zinc-600">Haz‑mat? Liquids? Give us a call first.</p>
        </div>
        <div class="rounded-lg border border-zinc-200 p-5">
          <h3 class="font-semibold">Drive On & Unload</h3>
          <p class="mt-1 text-sm text-zinc-700">Roll onto the calibrated scale, get a yard pass; crew grades & unloads.</p>
          <p class="mt-1 text-xs text-zinc-600">Leave batteries & copper up front for quickest check‑out.</p>
        </div>
        <div class="rounded-lg border border-zinc-200 p-5">
          <h3 class="font-semibold">Get Paid</h3>
          <p class="mt-1 text-sm text-zinc-700">Weight ticket prints; California law requires a check for non‑ferrous payouts, mailed after a three‑day hold.</p>
          <p class="mt-1 text-xs text-zinc-600">Opt‑in for weekly ACH if you’re an industrial account.</p>
        </div>
      </div>
    </section>
    <section class="mx-auto max-w-7xl px-6 md:px-8 py-12">
      <h2 class="text-2xl font-bold tracking-tight">Quick FAQ</h2>
      <div class="mt-4 space-y-2">
        <details class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-medium">Do I need an ID?</summary><p class="mt-2 text-sm text-zinc-700">Yes—state law requires a valid photo ID for non-ferrous transactions.</p></details>
        <details class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-medium">How often do prices change?</summary><p class="mt-2 text-sm text-zinc-700">Markets update daily. Call us for the latest numbers.</p></details>
        <details class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-medium">Hazardous materials?</summary><p class="mt-2 text-sm text-zinc-700">We cannot accept fuel, oil, or other haz‑mat items.</p></details>
        <details class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-medium">Large profits?</summary><p class="mt-2 text-sm text-zinc-700">Call ahead so we can direct you to the right lane on arrival.</p></details>
        <details class="rounded-md border border-zinc-200 p-4"><summary class="cursor-pointer font-medium">Price updates?</summary><p class="mt-2 text-sm text-zinc-700">Sign up for alerts or watch the ticker above for today’s top metals.</p></details>
      </div>
    </section>
  </main>
  <DemoFooter />
</Demo>

