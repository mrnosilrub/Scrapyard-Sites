---
import DemoFooter from "../../../components/demo/DemoFooter.astro"
import DemoHeader from "../../../components/demo/DemoHeader.astro"
import Demo from "../../../layouts/Demo.astro"
const base = import.meta.env.BASE_URL
const withBase = (p: string) =>
	p.startsWith("http") || p.startsWith("#") ? p : base + p.replace(/^\//, "")
---
<Demo renderDefaultHeader={false} renderDefaultFooter={false}>
  <Fragment slot="head">
    <meta name="description" content="Meet the dedicated Demo Yard team behind our trusted service." />
    <meta property="og:title" content="Our Team | Demo Yard" />
  </Fragment>
  <DemoHeader title="Premium Demo" basePath="/demos/demo-yard-3" />
  <main class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <section id="team-hero">
      <h1 class="text-3xl font-bold tracking-tight">The People Behind the Pay‑Window.</h1>
      <p class="mt-2 text-zinc-700">Four specialists, one mission—honest weights, instant pay.</p>
      <div class="mt-4 flex gap-3">
        <a href={withBase('/demos/demo-yard-3/contact/')} class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">Request a Quote</a>
        <a href="#careers" class="inline-flex items-center rounded-md bg-zinc-900 px-5 py-3 font-medium text-white">Join the Team</a>
      </div>
    </section>
    <section id="team" class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {[ 'Alex Martinez — Operations Manager', 'Jamie Patel — Logistics Coordinator', 'Riley Thompson — Customer Success Lead', 'Victoria Chen — Environmental & Compliance', "Sam O'Connor — Scale Master", 'Morgan Lee — Yard Supervisor' ].map((t) => (
        <div class="rounded-lg border border-zinc-200 p-5"><h3 class="font-semibold">{t}</h3><p class="mt-1 text-sm text-zinc-700">Team bio placeholder per wireframe.</p></div>
      ))}
    </section>
    <section id="smooth" class="mt-12">
      <h2 class="text-2xl font-bold tracking-tight">How We Keep the Yard Running Smoothly</h2>
      <ul class="mt-3 list-disc pl-5 text-zinc-700 space-y-1"><li>Zero-shortcut safety</li><li>24-h scale calibration</li><li>Customer-first culture</li></ul>
    </section>
    <section id="careers" class="mt-12">
      <h2 class="text-2xl font-bold tracking-tight">Want to weld your future with us?</h2>
      <p class="mt-1 text-zinc-700">Join a crew that values safety, steady pay, and BBQ Fridays.</p>
      <div class="mt-2 text-sm text-zinc-600">Medical + 401k · Paid OSHA certs · Monthly BBQ</div>
      <a href="#" class="mt-4 inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">View Open Roles</a>
    </section>
  </main>
  <DemoFooter />
</Demo>

