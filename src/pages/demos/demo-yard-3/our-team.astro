---
import Demo from "../../../layouts/Demo.astro";
const base = import.meta.env.BASE_URL;
const withBase = (p: string) => (p.startsWith('http') || p.startsWith('#') ? p : base + p.replace(/^\//, ''));
---
<Demo>
  <Fragment slot="head">
    <meta name="description" content="Meet the dedicated Demo Yard team behind our trusted service." />
    <meta property="og:title" content="Our Team | Demo Yard" />
  </Fragment>
  <div id="demo-top-banner" class="w-full bg-[var(--brand-orange)] text-white text-sm">
    <div class="mx-auto max-w-7xl px-6 md:px-8 py-2 text-center">
      <a href={withBase('/')} class="underline underline-offset-4">Return to ScrapyardSites.com</a>
    </div>
  </div>
  <header class="sticky top-0 z-40 bg-white shadow-header">
    <input id="demo-nav-toggle" type="checkbox" class="peer sr-only" />
    <div class="mx-auto max-w-7xl px-6 md:px-8">
      <div class="flex h-16 items-center justify-between">
        <a href={withBase('/demos/demo-yard-3/')} class="text-lg font-semibold">Premium Demo</a>
        <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
          <a href={withBase('/demos/demo-yard-3/services/')} class="hover:text-[var(--brand-orange)]">Services</a>
          <a href={withBase('/demos/demo-yard-3/process/')} class="hover:text-[var(--brand-orange)]">Process</a>
          <a href={withBase('/demos/demo-yard-3/accepted-materials/')} class="hover:text-[var(--brand-orange)]">Materials</a>
          <a href={withBase('/demos/demo-yard-3/about/')} class="hover:text-[var(--brand-orange)]">About Us</a>
          <a href={withBase('/demos/demo-yard-3/our-team/')} class="hover:text-[var(--brand-orange)]">Our Team</a>
          <a href={withBase('/demos/demo-yard-3/contact/')} class="hover:text-[var(--brand-orange)]">Contact</a>
          <a href={withBase('/demos/demo-yard-3/faq/')} class="hover:text-[var(--brand-orange)]">FAQ</a>
        </nav>
        <div class="hidden md:flex">
          <a href={withBase('/demos/demo-yard-3/contact/')} class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-4 py-2 text-white shadow hover:opacity-95">Request a Quote</a>
        </div>
      </div>
    </div>
  </header>
  <main class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <section id="team-hero">
      <h1 class="text-3xl font-bold tracking-tight">The People Behind the Pay‑Window.</h1>
      <p class="mt-2 text-zinc-700">Four specialists, one mission—honest weights, instant pay.</p>
      <div class="mt-4 flex gap-3">
        <a href={withBase('/demos/demo-yard-3/contact/')} class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">Request a Quote</a>
        <a href="#careers" class="inline-flex items-center rounded-md bg-zinc-900 px-5 py-3 font-medium text-white">Join the Team</a>
      </div>
    </section>
    <section id="team" class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {[ 'Alex Martinez — Operations Manager', 'Jamie Patel — Logistics Coordinator', 'Riley Thompson — Customer Success Lead', 'Victoria Chen — Environmental & Compliance', "Sam O'Connor — Scale Master", 'Morgan Lee — Yard Supervisor' ].map((t) => (
        <div class="rounded-lg border border-zinc-200 p-5"><h3 class="font-semibold">{t}</h3><p class="mt-1 text-sm text-zinc-700">Team bio placeholder per wireframe.</p></div>
      ))}
    </section>
    <section id="smooth" class="mt-12">
      <h2 class="text-2xl font-bold tracking-tight">How We Keep the Yard Running Smoothly</h2>
      <ul class="mt-3 list-disc pl-5 text-zinc-700 space-y-1"><li>Zero-shortcut safety</li><li>24-h scale calibration</li><li>Customer-first culture</li></ul>
    </section>
    <section id="careers" class="mt-12">
      <h2 class="text-2xl font-bold tracking-tight">Want to weld your future with us?</h2>
      <p class="mt-1 text-zinc-700">Join a crew that values safety, steady pay, and BBQ Fridays.</p>
      <div class="mt-2 text-sm text-zinc-600">Medical + 401k · Paid OSHA certs · Monthly BBQ</div>
      <a href="#" class="mt-4 inline-flex items-center rounded-md bg-[var(--brand-orange)] px-5 py-3 font-medium text-white">View Open Roles</a>
    </section>
  </main>
  <footer class="mt-24 border-t border-zinc-200 bg-white">
    <div class="mx-auto max-w-7xl px-6 md:px-8 py-12">
      <p class="text-sm text-zinc-600">© {new Date().getFullYear()} Scrapyard Sites — All rights reserved.</p>
    </div>
  </footer>
</Demo>

