---
import Demo from "../../../layouts/Demo.astro";
const base = import.meta.env.BASE_URL;
const withBase = (p: string) => (p.startsWith('http') || p.startsWith('#') ? p : base + p.replace(/^\//, ''));
---
<Demo>
  <Fragment slot="head">
    <meta name="description" content="Get in touch with Demo Yard for scrap metal recycling services, quotes, or general inquiries." />
    <meta property="og:title" content="Contact | Demo Yard" />
  </Fragment>
  <div id="demo-top-banner" class="w-full bg-[var(--brand-orange)] text-white text-sm">
    <div class="mx-auto max-w-7xl px-6 md:px-8 py-2 text-center">
      <a href={withBase('/')} class="underline underline-offset-4">Return to ScrapyardSites.com</a>
    </div>
  </div>
  <header class="sticky top-0 z-40 bg-white shadow-header">
    <input id="demo-nav-toggle" type="checkbox" class="peer sr-only" />
    <div class="mx-auto max-w-7xl px-6 md:px-8">
      <div class="flex h-16 items-center justify-between">
        <a href={withBase('/demos/demo-yard-3/')} class="text-lg font-semibold">Premium Demo</a>
        <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
          <a href={withBase('/demos/demo-yard-3/services/')} class="hover:text-[var(--brand-orange)]">Services</a>
          <a href={withBase('/demos/demo-yard-3/process/')} class="hover:text-[var(--brand-orange)]">Process</a>
          <a href={withBase('/demos/demo-yard-3/accepted-materials/')} class="hover:text-[var(--brand-orange)]">Materials</a>
          <a href={withBase('/demos/demo-yard-3/about/')} class="hover:text-[var(--brand-orange)]">About Us</a>
          <a href={withBase('/demos/demo-yard-3/our-team/')} class="hover:text-[var(--brand-orange)]">Our Team</a>
          <a href={withBase('/demos/demo-yard-3/contact/')} class="hover:text-[var(--brand-orange)]">Contact</a>
          <a href={withBase('/demos/demo-yard-3/faq/')} class="hover:text-[var(--brand-orange)]">FAQ</a>
        </nav>
        <div class="hidden md:flex">
          <a href={withBase('/demos/demo-yard-3/contact/')} class="inline-flex items-center rounded-md bg-[var(--brand-orange)] px-4 py-2 text-white shadow hover:opacity-95">Request a Quote</a>
        </div>
      </div>
    </div>
  </header>
  <main class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <h2 class="text-2xl font-bold tracking-tight">Contact Us</h2>
    <dl class="mt-4 grid gap-2 text-sm text-zinc-700 sm:grid-cols-2">
      <div><dt class="font-semibold">Phone</dt><dd><a class="text-[var(--brand-orange)]" href="tel:5551234567">555‑123‑4567</a></dd></div>
      <div><dt class="font-semibold">Email</dt><dd><a class="text-[var(--brand-orange)]" href="mailto:info@demoyard.com">info@demoyard.com</a></dd></div>
      <div><dt class="font-semibold">Yard Address</dt><dd>123 Demo Road, Demo City, NY 12345</dd></div>
    </dl>
    <form class="mt-8 grid gap-4 sm:max-w-md" action="#" method="post">
      <input class="rounded-md border border-zinc-300 px-3 py-2" placeholder="Name" />
      <input class="rounded-md border border-zinc-300 px-3 py-2" placeholder="Email" />
      <input class="rounded-md border border-zinc-300 px-3 py-2" placeholder="Yard / Company" />
      <textarea class="rounded-md border border-zinc-300 px-3 py-2" rows="4" placeholder="Message"></textarea>
      <button class="inline-flex items-center justify-center rounded-md bg-[var(--brand-orange)] px-4 py-2 font-medium text-white">Send →</button>
    </form>
  </main>
  <footer class="mt-24 border-t border-zinc-200 bg-white">
    <div class="mx-auto max-w-7xl px-6 md:px-8 py-12">
      <p class="text-sm text-zinc-600">© {new Date().getFullYear()} Scrapyard Sites — All rights reserved.</p>
    </div>
  </footer>
</Demo>

