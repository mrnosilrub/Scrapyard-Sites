---
import DemoFooter from "../../../components/demo/DemoFooter.astro"
import DemoHeader from "../../../components/demo/DemoHeader.astro"
import Demo from "../../../layouts/Demo.astro"
const base = import.meta.env.BASE_URL
const withBase = (p: string) =>
	p.startsWith("http") || p.startsWith("#") ? p : base + p.replace(/^\//, "")
---
<Demo>
  <Fragment slot="head">
    <meta name="description" content="Get in touch with Demo Yard for scrap metal recycling services, quotes, or general inquiries." />
    <meta property="og:title" content="Contact | Demo Yard" />
  </Fragment>
  <DemoHeader title="Premium Demo" basePath="/demos/demo-yard-3" />
  <main class="mx-auto max-w-7xl px-6 md:px-8 py-16">
    <h2 class="text-2xl font-bold tracking-tight">Contact Us</h2>
    <dl class="mt-4 grid gap-2 text-sm text-zinc-700 sm:grid-cols-2">
      <div><dt class="font-semibold">Phone</dt><dd><a class="text-[var(--brand-orange)]" href="tel:5551234567">555‑123‑4567</a></dd></div>
      <div><dt class="font-semibold">Email</dt><dd><a class="text-[var(--brand-orange)]" href="mailto:info@demoyard.com">info@demoyard.com</a></dd></div>
      <div><dt class="font-semibold">Yard Address</dt><dd>123 Demo Road, Demo City, NY 12345</dd></div>
    </dl>
    <form class="mt-8 grid gap-4 sm:max-w-md" action="#" method="post">
      <label class="text-sm font-medium text-zinc-700" for="d3-name">Name</label>
      <input id="d3-name" name="name" class="rounded-md border border-zinc-300 px-3 py-2" placeholder="Name" required autocomplete="name" />
      <label class="text-sm font-medium text-zinc-700" for="d3-email">Email</label>
      <input id="d3-email" name="email" type="email" class="rounded-md border border-zinc-300 px-3 py-2" placeholder="Email" required autocomplete="email" />
      <label class="text-sm font-medium text-zinc-700" for="d3-company">Yard / Company</label>
      <input id="d3-company" name="organization" class="rounded-md border border-zinc-300 px-3 py-2" placeholder="Yard / Company" autocomplete="organization" />
      <label class="text-sm font-medium text-zinc-700" for="d3-message">Message</label>
      <textarea id="d3-message" name="message" class="rounded-md border border-zinc-300 px-3 py-2" rows="4" placeholder="Message" required></textarea>
      <button class="inline-flex items-center justify-center rounded-md bg-[var(--brand-orange)] px-4 py-2 font-medium text-white">Send →</button>
    </form>
  </main>
  <DemoFooter />
</Demo>

