---
import Base from "../../layouts/Base.astro";
import Hero from "../../components/Hero.astro";
---
<Base title="Demo Yard 2 — Scrapyard Sites">
  <section class="bg-emerald-600/10">
    <div class="mx-auto max-w-7xl px-4 py-3 text-sm"><a href="/demos/" class="font-medium text-emerald-700">← Back to demos</a></div>
  </section>
  <Hero
    title="Appalachia’s Trusted Scrap Metal Recycling Partner"
    body="We pay top dollar for cars, copper, aluminum & more—keeping Appalachia green one load at a time."
    primaryHref="#quote"
    primaryLabel="Get a Fast Quote"
    secondaryHref="#materials"
    secondaryLabel="What We Buy"
  />

  <section class="mx-auto max-w-7xl px-4 py-12">
    <h2 class="text-2xl font-bold tracking-tight">Why Choose Us?</h2>
    <div class="mt-6 grid gap-6 sm:grid-cols-3">
      <div class="rounded-lg border border-zinc-200 p-5">Top‑Tier Payouts</div>
      <div class="rounded-lg border border-zinc-200 p-5">Fast In‑&‑Out Yard</div>
      <div class="rounded-lg border border-zinc-200 p-5">Eco Impact</div>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-4 py-12" id="materials">
    <h2 class="text-2xl font-bold tracking-tight">Materials We Accept</h2>
    <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <div class="rounded-lg border border-zinc-200 p-5">Aluminum</div>
      <div class="rounded-lg border border-zinc-200 p-5">Copper</div>
      <div class="rounded-lg border border-zinc-200 p-5">Automobiles</div>
      <div class="rounded-lg border border-zinc-200 p-5">Appliances & Misc.</div>
      <div class="rounded-lg border border-zinc-200 p-5">Switch Gear</div>
    </div>
    <p class="mt-2 text-sm text-zinc-600">Call for guidance on materials: <a href="tel:19493568762" class="text-brand-orange">949‑356‑8762</a></p>
  </section>

  <section class="mx-auto max-w-7xl px-4 py-12" id="quote">
    <h2 class="text-2xl font-bold tracking-tight">Contact</h2>
    <div class="mt-6 grid gap-6 sm:grid-cols-2">
      <div class="rounded-lg border border-zinc-200 p-5">
        <div class="text-sm text-zinc-600">Phone, Fax, Email, Address, Hours</div>
      </div>
      <form class="grid gap-4">
        <input class="rounded-md border border-zinc-300 px-3 py-2" placeholder="Name" />
        <input class="rounded-md border border-zinc-300 px-3 py-2" placeholder="Email" />
        <textarea class="rounded-md border border-zinc-300 px-3 py-2" rows="4" placeholder="Message"></textarea>
        <button class="inline-flex items-center justify-center rounded-md bg-brand-orange px-4 py-2 font-medium text-white">Send →</button>
      </form>
    </div>
  </section>
</Base>

