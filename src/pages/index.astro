<style>
  /* FAQ chevron animation */
  .faq-chevron {
    transition: transform 0.3s ease-out;
    transform-origin: center;
  }
  
  .faq-details.faq-open .faq-chevron {
    transform: rotate(180deg);
  }

  /* FAQ content smooth expansion/collapse animation */
  .faq-content {
    display: grid;
    grid-template-rows: 0fr;
    opacity: 0;
    transition: grid-template-rows 0.3s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .faq-details.faq-open .faq-content {
    grid-template-rows: 1fr;
    opacity: 1;
  }
  
  .faq-content > div {
    overflow: hidden;
    transform: translateY(-8px);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .faq-details.faq-open .faq-content > div {
    transform: translateY(0);
  }

  /* Statistics Counter Animation Styles */
  .stat-card {
    opacity: 0;
    transform: translateY(30px) scale(0.9);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .stat-card.animate {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  
  .counter-number {
    font-variant-numeric: tabular-nums;
    transition: all 0.3s ease;
  }
  
  .counter-suffix {
    transition: all 0.3s ease;
  }
  
  .stat-description {
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .stat-card.animate .stat-description {
    opacity: 1;
    transform: translateY(0);
  }

  /* Pulsing effect during counting */
  .counter-number.counting {
    transform: scale(1.1);
  }
</style>

<script>
  // Enhance FAQ animations for smoother transitions
  document.addEventListener('DOMContentLoaded', function() {
    const details = document.querySelectorAll('.faq-details');
    
    details.forEach(detail => {
      let isAnimating = false;
      
      // Make entire card clickable
      detail.addEventListener('click', function(e) {
        // Prevent multiple clicks during animation
        if (isAnimating) return;
        
        const isOpen = detail.classList.contains('faq-open');
        
        if (isOpen) {
          // Closing animation
          isAnimating = true;
          detail.classList.remove('faq-open');
          
          // Reset animation flag after transition completes
          setTimeout(function() {
            isAnimating = false;
          }, 300); // Match CSS transition duration
        } else {
          // Opening animation
          isAnimating = true;
          detail.classList.add('faq-open');
          
          // Reset animation flag after transition completes
          setTimeout(function() {
            isAnimating = false;
          }, 300); // Match CSS transition duration
        }
      });
    });
  });

  // Statistics Counter Animation
  function animateCounter(element, target, duration = 1500) {
    const start = 0;
    const increment = target / (duration / 16); // 60fps
    let current = start;
    
    element.classList.add('counting');
    
    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        current = target;
        clearInterval(timer);
        element.classList.remove('counting');
      }
      element.textContent = Math.floor(current);
    }, 16);
  }

  // Initialize statistics animation
  function initStatsAnimation() {
    const statCards = document.querySelectorAll('.stat-card');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const card = entry.target;
          const delay = parseInt(card.dataset.delay) || 0;
          
          setTimeout(() => {
            card.classList.add('animate');
            
            // Start counter animation after reveal animation begins
            setTimeout(() => {
              const counterElement = card.querySelector('.counter-number');
              const target = parseInt(counterElement.dataset.target);
              animateCounter(counterElement, target);
            }, 300);
            
          }, delay);
          
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.3 });
    
    statCards.forEach(card => observer.observe(card));
  }

  // Initialize animations when DOM is ready
  document.addEventListener('DOMContentLoaded', initStatsAnimation);

  // Function to check if the features list has wrapped to multiple lines
  function checkFeaturesWrap() {
    const featuresList = document.getElementById('features-list');
    const featuresMarquee = document.getElementById('features-marquee');
    
    if (!featuresList || !featuresMarquee) return;
    
    // Only check on larger screens (sm and above)
    const isSmallScreen = window.matchMedia('(max-width: 640px)').matches;
    if (isSmallScreen) {
      // On mobile, keep original behavior
      featuresList.style.display = 'none';
      featuresMarquee.classList.remove('sm:hidden');
      featuresMarquee.style.display = 'block';
      return;
    }
    
    // Get all list items
    const listItems = featuresList.querySelectorAll('li');
    if (listItems.length === 0) return;
    
    // Reset to normal state first to measure properly
    featuresList.style.display = 'flex';
    featuresMarquee.style.display = 'none';
    
    // Check if any list item is on a different line than the first one
    const firstItemTop = listItems[0].getBoundingClientRect().top;
    let hasWrapped = false;
    
    for (let i = 1; i < listItems.length; i++) {
      const itemTop = listItems[i].getBoundingClientRect().top;
      // Allow for small differences due to rounding
      if (Math.abs(itemTop - firstItemTop) > 5) {
        hasWrapped = true;
        break;
      }
    }
    
    // Switch between layouts based on wrapping
    if (hasWrapped) {
      featuresList.style.display = 'none';
      featuresMarquee.classList.remove('sm:hidden');
      featuresMarquee.style.display = 'block';
    } else {
      featuresList.style.display = 'flex';
      featuresMarquee.classList.add('sm:hidden');
      featuresMarquee.style.display = 'none';
    }
  }
  
  // Check on load with a small delay to ensure layout is complete
  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(checkFeaturesWrap, 100);
  });
  
  // Check on resize with debouncing
  let resizeTimeout;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(checkFeaturesWrap, 100);
  });
</script>

