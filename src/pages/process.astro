---
import Card from "../components/Card.astro"
import Hero from "../components/Hero.astro"
import PricingTable from "../components/PricingTable.astro"
import Check from "../components/icons/Check.astro"
import Clock from "../components/icons/Clock.astro"
import Globe from "../components/icons/Globe.astro"
import Shield from "../components/icons/Shield.astro"
import Base from "../layouts/Base.astro"
import { withBase } from "../lib/paths"
---
<Base title="Process — Scrapyard Sites" description="Launch a scrapyard website in 7–10 days. Materials pages, tap-to-call, quote forms, and a 90-day warm-lead guarantee.">
  <Hero
    title="How We Build Your Reputation"
    body="In just seven days, we transform an outdated or invisible scrapyard site into a trusted digital storefront—built for compliance, local visibility, and lasting credibility."
  />

  <section class="band bg-brand-orange/5" id="credibility">
    <div class="section">
      <div class="reveal-immediate">
        <div class="content-narrow">
          <div class="eyebrow">Process</div>
        <h2 class="mt-1 text-2xl font-bold tracking-tight">Our Process</h2>
        <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <Card><Shield class="h-6 w-6 text-brand-orange" /><h3 class="mt-2 font-semibold">Assess & Plan</h3><p class="mt-1 text-sm text-zinc-600">Audit, compliance review, sitemap + local SEO.</p></Card>
        <Card class="anchor-target" id="qualification"><Check class="h-6 w-6 text-brand-orange" /><h3 class="mt-2 font-semibold">Design & Build</h3><p class="mt-1 text-sm text-zinc-600">Modern responsive site; copy answers seller questions.</p></Card>
        <Card class="anchor-target" id="visibility"><Globe class="h-6 w-6 text-brand-orange" /><h3 class="mt-2 font-semibold">Optimize & Launch</h3><p class="mt-1 text-sm text-zinc-600">Local SEO, schema, QA, DNS switch.</p></Card>
        <Card class="anchor-target" id="reliability"><Clock class="h-6 w-6 text-brand-orange" /><h3 class="mt-2 font-semibold">Maintain & Grow</h3><p class="mt-1 text-sm text-zinc-600">Unlimited updates, patches, backups, reports.</p></Card>
        </div>
        </div>
      </div>
    </div>
  </section>

  <section class="band bg-brand-orange/5">
    <div class="section">
      <div class="reveal">
        <PricingTable />
      </div>
    </div>
  </section>

  
  

</Base>

