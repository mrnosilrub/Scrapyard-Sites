---
import "../../styles/globals.css"
import RiskCalculator from "../../components/Calculator.astro"
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reputation Risk Calculator</title>
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class="bg-white text-zinc-900">
    <section class="mx-auto max-w-3xl px-4 py-6">
      <RiskCalculator bare={true} hideTitle={true} />
    </section>
    <script is:inline>
      const sendHeight = () => {
        const h = document.body.scrollHeight;
        parent?.postMessage({ type: 'embedHeight', id: 'calculator', height: h }, window.location.origin);
      };
      const ro = new ResizeObserver(sendHeight);
      ro.observe(document.body);
      window.addEventListener('load', sendHeight);
      setTimeout(sendHeight, 50);
    </script>
  </body>
</html>


