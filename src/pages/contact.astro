---
import ContactForm from "../components/ContactForm.astro"
import DepositBanner from "../components/DepositBanner.astro"
import FAQ from "../components/FAQ.astro"
import { DEFAULT_FAQ } from "../data/faq"
import Base from "../layouts/Base.astro"
import { withBase } from "../lib/paths"
---
<Base title="Contact — Scrapyard Sites">
  <section class="container py-16">
    <div class="eyebrow">Contact</div>
    <div class="container-narrow text-center">
      <h1 class="text-3xl font-bold tracking-tight">Book Your 15‑Minute Reputation Scan</h1>
      <p class="mt-3 text-zinc-700">Call <a href="tel:19493568762" class="link font-medium">949‑356‑8762</a> or use the form below.</p>
      <ul class="mt-4 flex items-center justify-center gap-4 text-sm text-zinc-600">
        <li>• No spam</li>
        <li>• Confidential</li>
        <li>• 15 minutes max</li>
      </ul>
    </div>
    <div class="container-narrow mt-8">
      <ContactForm submitLabel="Schedule My 15‑Minute Scan" goal="Form: Submit (Contact)" />
      <p class="mt-2 text-sm text-zinc-600">We’ll reply within 15 minutes during business hours.</p>
      <p class="mt-2 text-sm text-zinc-600">Not ready to chat? Try our <a href={withBase('/calculator/')} class="link">Risk Calculator</a>.</p>
    </div>

    <div class="mt-12">
      <FAQ items={DEFAULT_FAQ} />
    </div>
  </section>
  <DepositBanner />
</Base>

