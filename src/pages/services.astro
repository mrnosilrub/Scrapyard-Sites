---
import Card from "../components/Card.astro"
import Hero from "../components/Hero.astro"
import Check from "../components/icons/Check.astro"
import Clock from "../components/icons/Clock.astro"
import Globe from "../components/icons/Globe.astro"
import Shield from "../components/icons/Shield.astro"
import Base from "../layouts/Base.astro"
import { withBase } from "../lib/paths"
---
<Base title="Services — Scrapyard Sites" description="Launch a scrapyard website in 7–10 days. Materials pages, tap-to-call, quote forms, and a 90-day warm-lead guarantee.">
  <Hero
    title="Build Your Reputation Engine"
    body="Launch a high‑performing scrapyard website in just seven days. Designed to grow trust, visibility and bookings from day one."
  />

  

  <section class="band bg-brand-orange/5">
    <div class="section">
      <div class="reveal-immediate">
        <div class="eyebrow">Services</div>
        <h2 class="mt-1 text-2xl font-bold tracking-tight">Four Pillars</h2>
        <p class="mt-3 text-zinc-700">We focus on the four pillars that matter most for scrapyards.</p>
        <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <Card href={withBase('/process/#credibility')}>
          <Shield class="h-6 w-6 text-brand-orange" />
          <h3 class="mt-2 font-semibold">Credibility</h3>
          <p class="mt-1 text-sm text-zinc-600">Make the right first impression.</p>
        </Card>
        <Card href={withBase('/process/#qualification')}>
          <Check class="h-6 w-6 text-brand-orange" />
          <h3 class="mt-2 font-semibold">Qualification</h3>
          <p class="mt-1 text-sm text-zinc-600">Spend time with serious sellers.</p>
        </Card>
        <Card href={withBase('/process/#visibility')}>
          <Globe class="h-6 w-6 text-brand-orange" />
          <h3 class="mt-2 font-semibold">Visibility</h3>
          <p class="mt-1 text-sm text-zinc-600">Be found in local search.</p>
        </Card>
        <Card href={withBase('/process/#reliability')}>
          <Clock class="h-6 w-6 text-brand-orange" />
          <h3 class="mt-2 font-semibold">Reliability</h3>
          <p class="mt-1 text-sm text-zinc-600">Stay fast and secure.</p>
        </Card>
        </div>
      </div>
      
    </div>
  </section>

  <section class="band bg-brand-orange/5">
    <div class="section">
    <div class="reveal">
      <h2 class="text-2xl font-bold tracking-tight">Service Packages</h2>
    <div class="mt-6 grid gap-6 md:grid-cols-3">
      <div class="rounded-lg border border-zinc-200 p-6">
        <h3 class="text-lg font-semibold">Standard</h3>
        <p class="mt-1 text-sm text-zinc-600">Get trusted fast.</p>
        <a href={withBase('/pricing/')} class="mt-3 inline-block text-brand-orange">View Pricing</a>
      </div>
      <div class="rounded-lg border border-zinc-200 p-6">
        <h3 class="text-lg font-semibold">Premium</h3>
        <p class="mt-1 text-sm text-zinc-600">Dominate your market.</p>
        <a href={withBase('/pricing/')} class="mt-3 inline-block text-brand-orange">View Pricing</a>
      </div>
      <div class="rounded-lg border border-zinc-200 p-6">
        <h3 class="text-lg font-semibold">Care Plan</h3>
        <p class="mt-1 text-sm text-zinc-600">Keep your site fresh and secure.</p>
        <a href={withBase('/pricing/')} class="mt-3 inline-block text-brand-orange">View Pricing</a>
      </div>
          </div>
    </div>
    </div>
  </section>
  
</Base>

