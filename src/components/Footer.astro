---
const year = new Date().getFullYear();
const base = import.meta.env.BASE_URL;
const withBase = (p: string) => (p.startsWith('http') || p.startsWith('#') ? p : base + p.replace(/^\//, ''));
---
<footer class="mt-24 border-t border-zinc-200 bg-white">
  <div class="mx-auto max-w-7xl px-6 md:px-8 py-12">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-zinc-700">Pages</h3>
        <ul class="mt-4 space-y-2 text-sm">
          <li><a href={withBase('/')} class="hover:text-brand-orange">Home</a></li>
          <li><a href={withBase('/about/')} class="hover:text-brand-orange">About</a></li>
          <li><a href={withBase('/services/')} class="hover:text-brand-orange">Services</a></li>
          <li><a href={withBase('/process/')} class="hover:text-brand-orange">Process</a></li>
          <li><a href={withBase('/demos/')} class="hover:text-brand-orange">Demos</a></li>
          <li><a href={withBase('/pricing/')} class="hover:text-brand-orange">Pricing</a></li>
          <li><a href={withBase('/calculator/')} class="hover:text-brand-orange">Calculator</a></li>
          <li><a href={withBase('/contact/')} class="hover:text-brand-orange">Contact</a></li>
          <li><a href={withBase('/privacy/')} class="hover:text-brand-orange">Privacy</a></li>
        </ul>
      </div>
      <div class="lg:col-span-2">
        <p class="text-sm text-zinc-600">© {year} Scrapyard Sites — All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>

