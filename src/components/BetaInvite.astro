---
const base = import.meta.env.BASE_URL
const withBase = (p: string) =>
	p.startsWith("http") || p.startsWith("#") ? p : base + p.replace(/^\//, "")
---
<section class="mt-16">
  <div class="mx-auto max-w-7xl px-6 md:px-8">
    <div class="rounded-lg bg-brand-orange text-white p-6 sm:p-8">
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h3 class="text-xl font-semibold">Save 10% on your build — pay your deposit by Aug 30</h3>
          <p class="mt-1 text-white/90">Secure your build—own page-one Google space before competitors wake up.</p>
        </div>
        <a href={withBase('/pricing/#deposit')} class="inline-flex items-center justify-center rounded-md bg-white px-5 py-3 font-medium text-brand-orange">
          Pay Deposit →
        </a>
      </div>
    </div>
  </div>
</section>

