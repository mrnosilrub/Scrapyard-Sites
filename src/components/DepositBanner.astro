---
import { withBase } from "../lib/paths"
interface Props {
	message?: string
	sub?: string
}
const {
	message = "Save 10% on your build — pay your deposit by Aug 30.",
	sub = "50% today, balance at launch – 90-day warm lead guarantee",
} = Astro.props as Props
---
<section class="mt-16">
  <div class="container mobile-section-padding">
    <div class="rounded-lg bg-brand-orange text-white p-6 sm:p-8">
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h3 class="text-xl font-semibold">{message}</h3>
          <p class="mt-1 text-white/90">{sub}</p>
        </div>
        <a href={withBase('/pricing/#deposit')} class="btn btn-contrast">Pay Deposit →</a>
      </div>
    </div>
  </div>
</section>


