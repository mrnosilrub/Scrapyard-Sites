---
import type { FaqItem } from "../data/faq"
interface Props {
	items: FaqItem[]
	heading?: string
}
const { items, heading = "FAQ" } = Astro.props as Props
---
<section class="section">
  <div class="eyebrow">FAQ</div>
  <h2 class="mt-1 text-2xl font-bold tracking-tight">{heading}</h2>
  <div class="mt-4 space-y-2">
    {items.map((it) => (
      <details class="rounded-md border border-zinc-200 p-4">
        <summary class="cursor-pointer font-medium">{it.q}</summary>
        <p class="mt-2 text-sm text-zinc-700">{it.a}</p>
      </details>
    ))}
  </div>
</section>


