---
import logoUrl from "../assets/logo.svg"
const base = import.meta.env.BASE_URL
const withBase = (p: string) =>
	p.startsWith("http") || p.startsWith("#") ? p : base + p.replace(/^\//, "")
---
<header class="sticky top-0 z-40 bg-white shadow-header">
  <input id="nav-toggle" type="checkbox" class="peer sr-only" />
  <div class="mx-auto max-w-7xl px-6 md:px-8">
    <div class="flex h-16 items-center justify-between">
      <a href={withBase('/')} class="flex items-center gap-3">
        <img src={logoUrl.src ?? logoUrl} alt="Scrapyard Sites" class="h-8 w-8" />
        <span class="text-lg font-semibold tracking-tight">
          <span class="text-brand-orange">Scrapyard</span> Sites
        </span>
      </a>

      <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
        <a href={withBase('/services/')} class="hover:text-brand-orange">Services</a>
        <a href={withBase('/process/')} class="hover:text-brand-orange">Process</a>
        <a href={withBase('/demos/')} class="hover:text-brand-orange">Demos</a>
        <a href={withBase('/pricing/')} class="hover:text-brand-orange">Pricing</a>
        <a href={withBase('/calculator/')} class="hover:text-brand-orange">Calculator</a>
        <a href={withBase('/about/')} class="hover:text-brand-orange">About</a>
        <a href={withBase('/contact/')} class="hover:text-brand-orange">Contact</a>
      </nav>

      <div class="hidden md:flex">
        <a href={withBase('/contact/')} class="inline-flex items-center rounded-md bg-brand-orange px-4 py-2 text-white shadow hover:opacity-95">
          Book a Discovery Call
        </a>
      </div>

      <label for="nav-toggle" class="md:hidden inline-flex items-center justify-center rounded-md p-2 text-zinc-700 hover:bg-zinc-100" aria-label="Open Menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
      </label>
    </div>
  </div>

      <div class="fixed inset-0 z-50 hidden bg-white peer-checked:block">
    <div class="flex h-full flex-col">
      <div class="flex items-center justify-between px-6 md:px-8 h-16 shadow-header">
        <a href={withBase('/')} class="flex items-center gap-3">
          <img src={logoUrl.src ?? logoUrl} alt="Scrapyard Sites" class="h-8 w-8" />
          <span class="text-lg font-semibold tracking-tight"><span class="text-brand-orange">Scrapyard</span> Sites</span>
        </a>
        <label for="nav-toggle" class="inline-flex items-center justify-center rounded-md p-2 text-zinc-700 hover:bg-zinc-100" aria-label="Close Menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
        </label>
      </div>
      <nav class="flex-1 p-8 text-lg font-medium space-y-6">
        <a href={withBase('/services/')} class="block">Services</a>
        <a href={withBase('/process/')} class="block">Process</a>
        <a href={withBase('/demos/')} class="block">Demos</a>
        <a href={withBase('/pricing/')} class="block">Pricing</a>
        <a href={withBase('/calculator/')} class="block">Calculator</a>
        <a href={withBase('/about/')} class="block">About</a>
        <a href={withBase('/contact/')} class="block">Contact</a>
      </nav>
      <div class="p-8">
        <a href={withBase('/contact/')} class="inline-flex w-full items-center justify-center rounded-md bg-brand-orange px-4 py-3 text-white shadow">
          Book a Discovery Call
        </a>
      </div>
    </div>
  </div>
</header>

