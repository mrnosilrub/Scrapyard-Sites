{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [
			"**/.astro/**",
			"dist/**",
			"chrome/**",
			"data/**",
			"marketing/**",
			"docs/presentations/**",
			"scripts/audit/**"
		]
	},
	"formatter": { "enabled": true },
	"linter": { "enabled": true },
	"javascript": { "formatter": { "semicolons": "asNeeded" } },
	"overrides": [
		{
			"include": ["public/**/*.js"],
			"linter": {
				"rules": {
					"complexity": {
						"noForEach": "off",
						"useOptionalChain": "off"
					},
					"style": { "useSingleVarDeclarator": "off" },
					"suspicious": { "noAssignInExpressions": "off" }
				}
			}
		}
	]
}
